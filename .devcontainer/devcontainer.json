{
  "name": "crypto-transaction-log",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "USER_UID": "1000", // UID of your user on the host
      "USER_GID": "1000" // GID of your user on the host
    }
  },
  "remoteUser": "node",
  "workspaceFolder": "/home/node/app",
  "mounts": [
    "source=${localWorkspaceFolder},target=/home/node/app,type=bind",
    "source=${localEnv:HOME}/.ssh,target=/home/node/.ssh,type=bind,consistency=cached"
  ],
  "forwardPorts": [
    3530
  ]
}